<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="绑定服务"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:text="解绑服务"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/ll_base_player"
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="第一集_牛刀小试讨黄金"
            android:textSize="28dp" />


        <TextView
            android:id="@+id/tv_author_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="张强 著 | 老莫书屋播"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="37dp" />

        <RelativeLayout
            android:id="@+id/ll_play_bar"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pre_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_prev_nor" />


            <ImageView
                android:id="@+id/iv_pause_play"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_stop_nor" />


            <ImageView
                android:id="@+id/iv_next_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_next_nor" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>